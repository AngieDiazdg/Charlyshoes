<div class="container">
    <div class="col-sm-8 offset-sm-2 col-lg-4 offset-lg-2 col-xl-6 offset-xl-3 text-center login">

        <form class="rounded bg-white shadow p-5" action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedad.id}}" name="id">
            <h3>Modificar la novedad</h3>
            <br>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" name="titulo" value="{{novedad.titulo}}">
                <label for="floatingInput">Título</label>
            </div>

            <div class="form-floating">
                <textarea type="text" class="form-control" id="floatingPassword"
                    name="subtitulo">{{novedad.subtitulo}}</textarea>
                <label for="floatingPassword">Subtítulo</label>
            </div>
            <br>
            <div class="form-floating">
                <textarea type="text" class="form-control" id="floatingPassword"
                    name="cuerpo">{{novedad.cuerpo}}</textarea>
                <label for="floatingPassword">Cuerpo</label>
            </div>
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-dark">Modificar</button>
            </div>

        </form>
        {{#if error}}
        <p>{{message}}</p>
        {{/if}}



    </div>
</div>